# Doxygen configuration for HorribleLLM
PROJECT_NAME           = "HorribleLLM"
PROJECT_BRIEF          = "A fast and flexible LLM runtime with Python and C++ bindings."
OUTPUT_DIRECTORY       = @CMAKE_BINARY_DIR@/doxygen
INPUT                  = @CMAKE_SOURCE_DIR@/include @CMAKE_SOURCE_DIR@/src
RECURSIVE              = YES
GENERATE_HTML          = YES
GENERATE_XML           = YES
QUIET                  = YES
WARN_IF_UNDOCUMENTED   = NO
EXTRACT_ALL            = YES
GENERATE_LATEX         = NO
FILE_PATTERNS          = *.h *.hpp *.cpp
XML_OUTPUT             = xml
HTML_OUTPUT            = html